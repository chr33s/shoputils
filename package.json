{
	"name": "@chr33s/shoputils",
	"version": "1.0.0",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"imports": {
		"#/*": "./*"
	},
	"exports": {
		"./client/*": {
			"import": "./dist/client/*.js",
			"types": "./dist/client/*.d.ts"
		},
		"./server/*": {
			"import": "./dist/server/*.js",
			"types": "./dist/server/*.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsdown",
		"check": "oxlint --fix --fix-suggestions --ignore-pattern='**/dist/*' --import-plugin --react-plugin && tsc --noEmit",
		"test": "vitest --run"
	},
	"peerDependencies": {
		"react": ">=19.0.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "4.20250826.0",
		"@remix-run/file-storage": "0.9.0",
		"@shopify/graphql-client": "1.4.1",
		"@types/react": "19.1.11",
		"oxlint": "1.13.0",
		"react": "19.1.1",
		"tsdown": "0.14.2",
		"typescript": "5.9.2",
		"vite": "7.1.3",
		"vitest": "3.2.4"
	},
	"engines": {
		"node": "^22.18.0"
	}
}