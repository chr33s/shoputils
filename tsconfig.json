{
	"compilerOptions": {
		"baseUrl": ".",
		"checkJs": true,
		"erasableSyntaxOnly": true,
		"lib": ["ES2022"],
		"noEmit": true,
		"paths": {
			"#/*": ["./*"]
		},
		"skipLibCheck": true,
		"strict": true,
		"verbatimModuleSyntax": false
	},
	"exclude": ["node_modules"],
	"include": ["./shared/**/*"],
	"files": [],
	"references": [
		{
			"path": "./tsconfig.client.json"
		},
		{
			"path": "./tsconfig.server.json"
		}
	]
}
